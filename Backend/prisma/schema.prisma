generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String
  role          Role
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  auditLogs     AuditLog[]
  notifications Notification[]
  patient       Patient?
  professional  Professional?
}

model Patient {
  id               String          @id @default(uuid())
  userId           String          @unique
  fullName         String
  cpf              String          @unique
  phone            String
  birthDate        DateTime
  stripeCustomerId String?
  appointments     Appointment[]
  conversations    Conversation[]
  medicalRecords   MedicalRecord[]
  user             User            @relation(fields: [userId], references: [id])
}

model Professional {
  id             String                  @id @default(uuid())
  userId         String                  @unique
  fullName       String
  licenseNumber  String
  bio            String?
  avatarUrl      String?
  price          Decimal                 @db.Decimal(10, 2)
  isVerified     Boolean                 @default(false)
  appointments   Appointment[]
  availability   AvailabilitySlot[]
  conversations  Conversation[]
  medicalRecords MedicalRecord[]
  user           User                    @relation(fields: [userId], references: [id])
  specialties    ProfessionalSpecialty[]
}

model Specialty {
  id            Int                     @id @default(autoincrement())
  name          String
  professionals ProfessionalSpecialty[]
}

model ProfessionalSpecialty {
  professionalId String
  specialtyId    Int
  professional   Professional @relation(fields: [professionalId], references: [id])
  specialty      Specialty    @relation(fields: [specialtyId], references: [id])

  @@id([professionalId, specialtyId])
}

model Appointment {
  id             String             @id @default(uuid())
  patientId      String
  professionalId String
  scheduledAt    DateTime
  status         AppointmentStatus  @default(SCHEDULED)
  price          Decimal            @db.Decimal(10, 2)
  videoRoomUrl   String?
  createdAt      DateTime           @default(now())
  patient        Patient            @relation(fields: [patientId], references: [id])
  professional   Professional       @relation(fields: [professionalId], references: [id])
  rating         AppointmentRating?
  conversation   Conversation?
  medicalRecord  MedicalRecord?
}

model AvailabilitySlot {
  id             String       @id @default(uuid())
  professionalId String
  dayOfWeek      Int
  startTime      String
  endTime        String
  professional   Professional @relation(fields: [professionalId], references: [id])
}

model MedicalRecord {
  id              String       @id @default(uuid())
  appointmentId   String       @unique
  patientId       String
  professionalId  String
  anamnesis       String
  diagnosis       String?
  prescriptionUrl String?
  createdAt       DateTime     @default(now())
  appointment     Appointment  @relation(fields: [appointmentId], references: [id])
  patient         Patient      @relation(fields: [patientId], references: [id])
  professional    Professional @relation(fields: [professionalId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  targetId  String?
  ipAddress String?
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id            String           @id @default(uuid())
  userId        String
  title         String
  message       String
  type          NotificationType
  read          Boolean          @default(false)
  appointmentId String?
  messageId     String?
  createdAt     DateTime         @default(now())
  messageRef    Message?         @relation(fields: [messageId], references: [id])
  user          User             @relation(fields: [userId], references: [id])

  @@index([userId, read])
  @@index([userId, createdAt])
}

model AppointmentRating {
  id            String      @id @default(uuid())
  appointmentId String      @unique
  rating        Int
  comment       String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  @@index([appointmentId])
}

model Conversation {
  id             String       @id @default(uuid())
  appointmentId  String?      @unique
  patientId      String
  professionalId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  appointment    Appointment? @relation(fields: [appointmentId], references: [id])
  patient        Patient      @relation(fields: [patientId], references: [id])
  professional   Professional @relation(fields: [professionalId], references: [id])
  messages       Message[]

  @@index([patientId, professionalId])
  @@index([appointmentId])
}

model Message {
  id             String         @id @default(uuid())
  conversationId String
  senderId       String
  text           String
  read           Boolean        @default(false)
  readAt         DateTime?
  createdAt      DateTime       @default(now())
  conversation   Conversation   @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  notifications  Notification[]

  @@index([conversationId, createdAt])
  @@index([senderId])
}

enum Role {
  PATIENT
  PROFESSIONAL
  ADMIN
}

enum AppointmentStatus {
  PENDING_PAYMENT
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum NotificationType {
  APPOINTMENT
  MESSAGE
  REMINDER
  SYSTEM
}
